// While loops

var todo: [String] = ["Wake up",
                      "Brush Teeth",
                      "Code",
                      "Sleep"]
var i = 0

while i <= 20 {
    print(i)
    i += 1 // unary plus operator, add's 1 to i after every iteration of the loop. Loop stops at 20.
}

var index = 0

while index < todo.count { // whilst index (0) is less than the index count of array todo
    print(todo[index]) // print each string in array to console
    index += 1 // Index is increased by 1 at the end of each loop, to stop an infinite loop.
}

// Repeat while loop

var counter = 1

while counter < 1 { // whilst counter is less than 1 keep looping. Loop will become infinate. 
    print("I am inside the while loop")
    counter += 1
    
}

